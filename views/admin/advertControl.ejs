
<section class="adverts">
  <h1 class="section-title">Advert Control</h1>
  <div class="box-container">
    <% for( advert of adverts ) { %>
    <div class="box">
      <div class="image">
        <img src="<%=advert.url%>" alt="" />
      </div>
      <div class="content">
        <a class="title" href="/advert/<%=advert._id%>"
          ><%= advert.name.substring(0,20) %></a
        >
        <span><%= advert.uploadedAt.toDateString() %></span>
        <p><%= advert.description.substring(0,15)+"..." %></p>
        <div class="bottom">
          <a href="/advert/<%=advert._id%>" class="btn">Details</a>
          <div class="price">Price <%=advert.price%>$</div>
        </div>
        <a
          href="/advert/delete/<%=advert._id%>?_method=DELETE"
          class="fa-solid fa-trash"
          onclick="return confirm('Do you want to delete this advert')"
        ></a>
      </div>
    </div>
    <% } %>
  </div>
</section>
