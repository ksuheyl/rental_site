<html>
  <%- include('./adminPartials/adminHeader.ejs') %>
  <body>
    <section class="reservation-wrapper">
      <div class="container">
        <h1>Reservation Controller</h1>
        <% for(let i = 0; i < reservations.length; i++ ) { %>
        <div class="vehicle-card">
          <div style="width: 20rem; height: 20rem">
            <img
              src="<%= adverts[i][0].url %>"
              alt="img"
              class="vehicle-image"
            />
          </div>
          <div class="car-details">
            <div class="details-top">
              <p><b>name:</b>&nbsp;<%= adverts[i][0].name %></p>
              <a
                class="btn-update"
                href="/advert/<%=reservations[i].advertId %>"
                >Go to Vehicle</a
              >
            </div>
            <p>
              <strong>Rental Date:</strong> <%=
              reservations[i].startingDate.toDateString() %>
            </p>
            <p>
              <strong>Lease End Date:</strong> <%=
              reservations[i].endDate.toDateString() %>
            </p>
            <p><b>Price:</b>&nbsp;<%= reservations[i].price %>$</p>
            <div class="actions">
              <a
                href="/admin/reservation/<%= reservations[i]._id %>?_method=DELETE"
                class="btn-delete"
                onclick="return confirm('Do you want to delete this reservation')"
                >Delete</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
